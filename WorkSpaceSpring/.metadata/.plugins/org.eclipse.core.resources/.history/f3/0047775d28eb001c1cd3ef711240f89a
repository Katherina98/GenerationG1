package com.generation.api;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class ParametrosRestController {

	
	//localhost:8080/api?fecha=20220613
	@RequestMapping("/api")
	public String fecha(@RequestParam(value="fecha") String fecha) {
			return "La fecha es: " + fecha;
	}
	
	//localhost:8080/api/cliente?nombre=katherina
		@RequestMapping("/api/cliente")
		public String cliente(@RequestParam(value="cliente") String cliente) {
				return "El nombre del cliente es : " + cliente;
		}
	
	
}
